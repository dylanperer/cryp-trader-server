generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./cryp-trader.db"
}

model Alert {
  id                              Int      @id @default(autoincrement())
  coin                            String
  side                            String
  price                           Float
  receivedAt                      DateTime
  createdAt                       DateTime @default(now())
  Trade_Trade_exitAlterIdToAlert  Trade[]  @relation("Trade_exitAlterIdToAlert")
  Trade_Trade_entryAlertIdToAlert Trade[]  @relation("Trade_entryAlertIdToAlert")
}

model Log {
  id        Int      @id @default(autoincrement())
  sessionId String
  module    String
  action    String
  logLevel  String
  context   String?
  createdAt DateTime @default(now())
}

model Trade {
  id                              Int      @id @default(autoincrement())
  side                            String
  entryPrice                      Float
  entryAlertId                    Int
  exitAlterId                     Int?
  createdAt                       DateTime @default(now())
  Alert_Trade_exitAlterIdToAlert  Alert?   @relation("Trade_exitAlterIdToAlert", fields: [exitAlterId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  Alert_Trade_entryAlertIdToAlert Alert    @relation("Trade_entryAlertIdToAlert", fields: [entryAlertId], references: [id], onDelete: NoAction, onUpdate: NoAction)
}
